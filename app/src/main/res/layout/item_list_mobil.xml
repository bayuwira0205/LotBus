<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_Kendaraan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="8dp"
    android:outlineSpotShadowColor="@color/black"
    android:outlineAmbientShadowColor="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Merk Kendaraan"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/im_kendaraan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/mobil"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <ImageView
            android:id="@+id/im_kapasitas"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/chair"
            app:layout_constraintStart_toEndOf="@+id/im_kendaraan"
           app:layout_constraintTop_toTopOf="@id/im_kendaraan" />

        <TextView
            android:id="@+id/tv_kapasitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@id/im_kapasitas"
            app:layout_constraintStart_toEndOf="@id/im_kapasitas"
            app:layout_constraintTop_toTopOf="@id/im_kapasitas" />

        <TextView
            android:id="@+id/tv_sopir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="Sopir"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/sopir_bground"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/im_kapasitas"
            app:layout_constraintTop_toBottomOf="@+id/im_kapasitas" />

        <TextView
            android:id="@+id/tv_tanpaSopir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sopir_bground"
            android:fontFamily="@font/montserrat_medium"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginLeft="16dp"
            android:text="Tanpa Sopir"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sopir"
            app:layout_constraintStart_toEndOf="@+id/tv_sopir"
            app:layout_constraintTop_toTopOf="@+id/tv_sopir" />

        <TextView
            android:id="@+id/tv_jumlahTersedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="2 Tersedia"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/im_kapasitas"
            app:layout_constraintTop_toBottomOf="@+id/tv_sopir" />

        <TextView
            android:id="@+id/tv_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Rp.180.000/hari"
            android:textColor="@color/appBar"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/im_kendaraan"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

